<%= form_for @user, :url => users_path do |f| %>
    <%= f.label :email, "Email" %>
    <%= f.text_field :email %>
    <%= f.label :password, "Password" %>
    <%= f.text_field :password %>
    <%= f.submit "註冊" %>
<% end %>
<p style="color: green"><%= flash[:notice] %></p>
<p style="color: red"><%= flash[:alert] %></p>
<%= button_to "登入", sign_in_users_path, :method => :post %>